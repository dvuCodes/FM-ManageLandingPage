---
import Layout from '../layouts/Layout.astro';
import illustrationImage from "../images/illustration-intro.svg"
import { Image } from 'astro:assets';


// import components
import H1 from '../components/H1.astro';
import Button from '../components/Button.astro';
import AboutUs from '../components/Sections/AboutUs.astro';
import Testimony from '../components/Sections/Testimony.astro';
import CTAbottom from '../components/CTAbottom.astro';
import Footer from '../components/Footer.astro';


---

<Layout title="Manage Landing Page">
	<main class="flex flex-col md:max-w-[80%] justify-center items-center m-auto">

			<section class="flex flex-col items-center w-full text-center my-5 px-4 gap-6 md:text-start md:flex-row-reverse">
				<div class="md:w-[50%]">	
					<Image src={illustrationImage} alt="illustrations of graphs"></Image>
				</div>
			

				<div class="flex flex-col gap-10 md:w-[50%] items-center md:justify-start md:items-start">
					<H1>Bring everyone together to build better products.</H1>
				
					<p>Manage makes it simple for software teams to plan day-to-day tasks while keeping the larger team goals in view.</p>
					<Button />
				</div>

			</section>

			<AboutUs />

			<Testimony />
	</main>
	<CTAbottom />
	<Footer/>
</Layout>

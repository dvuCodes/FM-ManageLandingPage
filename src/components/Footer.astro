---
import {Image} from "astro:assets"
import logoWhite from "../images/logoWhite.svg"
import fbLogo from "../images/icon-facebook.svg"
import twitterLogo from "../images/icon-twitter.svg"
import pinterestLogo from "../images/icon-pinterest.svg"
import instaLogo from "../images/icon-instagram.svg"
import youtubeLogo from "../images/icon-youtube.svg"

---

<footer class="bg-gray-800 w-full flex flex-col gap-10 justify-around py-16 md:px-24 md:flex-row-reverse">
    <div>        
        <form action="" class="flex mx-auto gap-2 w-full p-6 text-sm">
            <input type="text" placeholder="Updates in your inbox..." class="w-full px-4 rounded-full">
            <button type="submit" class=`rounded-full p-1 bg-orange-600 text-white font-bold h-10 w-20 flex items-center justify-center shadow-xl transition-all duration-200 ease-in-out hover:scale-110`>GO</button>
        </form>
    </div>


    <nav class="mx-20">
        <ul class="grid grid-cols-2 grid-rows-1 text-white gap-x-10 gap-y-2">
            <a href="/"><li>Home</li></a>
            <a href="/"><li>Careers</li></a>
            <a href="/"><li>Pricing</li></a>
            <a href="/"><li>Community</li></a>
            <a href="/"><li>Products</li></a>
            <a href="/"><li>Privacy Policy</li></a>
            <a href="/"><li>About Us</li></a>
        </ul>
    </nav>

    <div class="flex flex-col gap-10 md:flex-col-reverse justify-around">
        <div class="flex gap-4 mx-auto">
            <a href=""><Image src={fbLogo} alt="facebook social link" width={30} height={30} /></a>
            <a href=""><Image src={twitterLogo} alt="facebook social link" width={30}height={30}/></a>
            <a href=""><Image src={pinterestLogo} alt="facebook social link" width={30} height={30}/></a>
            <a href=""><Image src={instaLogo} alt="facebook social link" width={30} height={30}/></a>
            <a href=""><Image src={youtubeLogo} alt="facebook social link" width={30} height={30}/></a>
        </div>
        <Image src={logoWhite} alt="manage logo" class="mx-auto md:w-full" />
    </div>

    <p class="text-white mx-auto text-sm md:hidden">Copyright 20202. All Rights Reserved</p>
</footer>